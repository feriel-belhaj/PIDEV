{% extends 'base.html.twig' %}

{% block title %}Commentaire {% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Liste des commentaire </h1>

        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>contenu/th>
                    <th>Date</th>
                    <th>etat</th>
                    <th>Creation</th>
                        <th>modifier </th>
                    <th>supprimer </th>
                    
                   
                </tr>
            </thead>
            <tbody>
                {% for a in tabservice %}
                    <tr>
                        <td>{{ a.id }}</td>
                        <td>{{ a.contenu }}</td>
                       
                        
                        <td>{{ a.getDateComment()|date('d/m/Y H:i') }}</td>
                        <td>{{ a.etat }}</td>
                            <td>{{ a.getCreation().id }}</td>
                       
                          <td>
                           <a href="{{ path('updateFormcmn', { id: a.id }) }}" class="btn btn-sm btn-primary">Modifier</a>
                         
                          </td> 
                          <td> 
                          <a href="{{ path('deleteFormBlog', { id: a.id }) }}" class="btn btn-sm btn-primary">supprimer</a>     </td> 
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center text-muted">Aucune cr√©ation disponible</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
