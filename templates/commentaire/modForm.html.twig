{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Modifier le commentaire</h1>

        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.contenu, 'Contenu') }}
                {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.contenu) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.etat, 'État') }}
                {{ form_widget(form.etat, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.etat) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.creation, 'Création') }}
                {{ form_widget(form.creation, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.creation) }}
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a href="{{ path('commentaire_list') }}" class="btn btn-secondary">Retour</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
