{% extends 'baseBack.html.twig' %}

{% block title %}Modifier l'événement{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <div class="row">
                        <div class="col-6 d-flex align-items-center">
                            <h6 class="mb-0">Modifier l'événement "{{ evenement.titre }}"</h6>
                        </div>
                        <div class="col-6 text-end">
                            <a class="btn btn-outline-secondary btn-sm mb-0" href="{{ path('app_evenement_admin') }}">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {{ include('evenement/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

                    <div class="mt-3">
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="far fa-trash-alt me-2"></i>Supprimer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir supprimer l'événement "{{ evenement.titre }}" ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('app_evenement_delete', {'id': evenement.id}) }}" style="display: inline-block">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id) }}">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
