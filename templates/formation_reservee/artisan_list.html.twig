{% extends 'baseBack.html.twig' %}

{% block title %}Liste des formations réservées{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Liste des formations réservées</h1>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Toutes les réservations</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Formation</th>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Email</th>
                                <th>Date de réservation</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reservation in reservations %}
                                <tr>
                                    <td>{{ reservation.formation.titre }}</td>
                                    <td>{{ reservation.nom }}</td>
                                    <td>{{ reservation.prenom }}</td>
                                    <td>{{ reservation.utilisateur.email }}</td>
                                    <td>{{ reservation.dateReservation|date('d/m/Y H:i') }}</td>
                                    <td>
                                        <span class="badge badge-{{ reservation.status == 'en_attente' ? 'warning' : 'success' }}">
                                            {{ reservation.status }}
                                        </span>
                                    </td>
                                    <td>
                                        {# Actions spécifiques à l'artisan #}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="text-center">Aucune réservation trouvée</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 