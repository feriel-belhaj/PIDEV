{% extends 'base.html.twig' %}

{% block title %}Certificat index{% endblock %}

{% block body %}
    <h1>Certificat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Dateobt</th>
                <th>Niveau</th>
                <th>Nomorganisme</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for certificat in certificats %}
            <tr>
                <td>{{ certificat.id }}</td>
                <td>{{ certificat.nom }}</td>
                <td>{{ certificat.dateobt ? certificat.dateobt|date('Y-m-d') : '' }}</td>
                <td>{{ certificat.niveau }}</td>
                <td>{{ certificat.nomorganisme }}</td>
                <td>
                    <a href="{{ path('app_certificat_show', {'id': certificat.id}) }}">show</a>
                    <a href="{{ path('app_certificat_edit', {'id': certificat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_certificat_new') }}">Create new</a>
{% endblock %}
