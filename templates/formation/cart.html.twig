{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Votre Panier</h1>

        {% if formations|length > 0 %}
            <div class="row">
                {% for formation in formations %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            {% if formation.image %}
                                <img src="{{ asset('uploads/images/' ~ formation.image) }}" class="card-img-top" alt="{{ formation.titre }}">
                            {% else %}
                                <img src="{{ asset('images/default-formation.jpg') }}" class="card-img-top" alt="Default Image">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ formation.titre }}</h5>
                                <p class="card-text">{{ formation.description|slice(0, 100) }}...</p>
                                <p class="card-text"><strong>Prix:</strong> {{ formation.prix }} â‚¬</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning text-center" role="alert">
                Votre panier est vide.
            </div>
        {% endif %}
    </div>
{% endblock %}