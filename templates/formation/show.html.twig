{% extends 'base.html.twig' %}

{% block title %}Formation - {{ formation.titre }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row g-5 align-items-center">
            <!-- Image de la formation -->
            <div class="col-lg-5">
                <img src="{{ asset('uploads/formation_images/' ~ formation.image) }}" 
                     alt="{{ formation.titre }}" 
                     class="img-fluid rounded shadow-sm">
            </div>

            <!-- Détails de la formation -->
            <div class="col-lg-7">
                <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-warning rounded-pill px-4 py-1 mb-3">Formation</small>
                <h1 class="display-5 mb-4">{{ formation.titre }}</h1>
                <p class="text-muted mb-4">{{ formation.description }}</p>
                <ul class="list-unstyled mb-4">
                    <li><i class="fas fa-user text-warning me-2"></i><strong>Organisateur:</strong> {{ formation.organisateur }}</li>
                    <li><i class="fas fa-calendar-alt text-warning me-2"></i><strong>Dates:</strong> 
                        {{ formation.datedeb ? formation.datedeb|date('Y-m-d') : '' }} - 
                        {{ formation.datefin ? formation.datefin|date('Y-m-d') : '' }}
                    </li>
                    <li><i class="fas fa-clock text-warning me-2"></i><strong>Durée:</strong> {{ formation.duree }} jours</li>
                    <li><i class="fas fa-map-marker-alt text-warning me-2"></i><strong>Emplacement:</strong> {{ formation.emplacement }}</li>
                    <li><i class="fas fa-euro-sign text-warning me-2"></i><strong>Prix:</strong> {{ formation.prix }} D</li>
                    <li><i class="fas fa-layer-group text-warning me-2"></i><strong>Niveau:</strong> {{ formation.niveau }}</li>
                    <li><i class="fas fa-chair text-warning me-2"></i><strong>Places restantes:</strong> 
                        {{ formation.nbplace - formation.nbparticipant }}
                    </li>
                </ul>
                {% if app.user %}
                <a href="{{ path('app_formation_reserver', {'id': formation.id}) }}" class="btn btn-primary">
                    Réserver maintenant
                </a>
                {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-primary py-2 px-4 d-none d-xl-inline-block rounded-pill">Réserver maintenant <i class="fas fa-arrow-right ps-2"></i></a>
                {% endif %}
                
                <a href="{{ path('app_formation_index') }}" class="btn btn-primary py-2 px-4 d-none d-xl-inline-block rounded-pill">back to list</a>

               <!-- <a href="{{ path('app_formation_edit', {'id': formation.id}) }}">edit</a>

              {{ include('formation/_delete_form.html.twig') }}-->
            </div>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    <style>
        /* Container */
        .container {
            max-width: 1100px;
        }

        /* Image */
        .img-fluid {
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Titre */
        h1.display-5 {
            font-family: 'Georgia', serif;
            color: #333;
        }

        /* Liste des détails */
        ul.list-unstyled li {
            margin-bottom: 10px;
            font-size: 1.1rem;
            color: #555;
        }

        /* Icônes */
        .fa-warning {
            color: #ffc107;
        }

        /* Bouton */
        .btn-warning {
            background-color: #ffc107;
            border: none;
            transition: background-color 0.3s ease;
        }

        .btn-warning:hover {
            background-color: #e0a800;
        }
    </style>
{% endblock %}
