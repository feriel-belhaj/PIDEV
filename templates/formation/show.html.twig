{% extends 'base.html.twig' %}

{% block title %}Formation - {{ formation.titre }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
     integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
     crossorigin=""/>
    <script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>
    <style>
        .container {
            max-width: 1300px;
            margin: 0 auto;
        }

        .formation-header {
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('{{ asset('uploads/formation_images/' ~ formation.image) }}');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 4rem 0;
            margin-bottom: 3rem;
            border-radius: 15px;
        }

        .formation-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: #ffffff;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }

        .interactive-section {
            background: #f8f9fa;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .section-title {
            color: #2c3e50;
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 3px solid #007bff;
            display: inline-block;
        }

        .model-viewer-container {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        #map {
            height: 400px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .formation-details {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .detail-item {
            margin-bottom: 1rem;
            padding: 0.5rem;
            border-bottom: 1px solid #eee;
        }

        .detail-item i {
            width: 25px;
            color: #ffc107;
        }

        .action-buttons {
            margin-top: 2rem;
        }

        .btn-custom {
            padding: 0.8rem 1.5rem;
            border-radius: 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

        model-viewer {
            width: 100%;
            height: 500px;
            background-color: #f8f9fa;
        }

        .ar-button {
            background: #007bff;
            color: white;
            padding: 10px 20px;
            border-radius: 25px;
            border: none;
            font-weight: 600;
            margin-top: 10px;
        }

        .ar-button:hover {
            background: #0056b3;
        }

        .description-content {
            padding: 1rem 0;
            line-height: 1.6;
        }
        
        .description-content p {
            margin-bottom: 1rem;
            font-size: 1.1rem;
            color: #555;
        }
        
        /* Ajuster l'espacement entre les sections */
        .mt-4 {
            margin-top: 1.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- En-tête de la formation -->
    <div class="formation-header">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="formation-title">{{ formation.titre }}</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <!-- Colonne de gauche : Détails -->
            <div class="col-lg-4">
                <div class="formation-details">
                    <h3 class="section-title">Détails</h3>
                    <div class="detail-item">
                        <i class="fas fa-user"></i>
                        <strong>Organisateur:</strong> {{ formation.organisateur }}
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-calendar-alt"></i>
                        <strong>Dates:</strong> 
                        {{ formation.datedeb|date('d/m/Y') }} - {{ formation.datefin|date('d/m/Y') }}
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-clock"></i>
                        <strong>Durée:</strong> {{ formation.duree }} jours
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <strong>Emplacement:</strong> {{ formation.emplacement }}
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-euro-sign"></i>
                        <strong>Prix:</strong> {{ formation.prix }} D
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-layer-group"></i>
                        <strong>Niveau:</strong> {{ formation.niveau }}
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-chair"></i>
                        <strong>Places restantes:</strong> 
                        {{ formation.nbplace - formation.nbparticipant }}
                    </div>

                    <div class="action-buttons">
                        {% if app.user %}
                            <a href="{{ path('app_cart', {'id': formation.id}) }}" class="btn btn-custom btn-primary w-100 mb-2">
                                Réserver maintenant
                            </a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-custom btn-primary w-100 mb-2">
                                Réserver maintenant <i class="fas fa-arrow-right"></i>
                            </a>
                        {% endif %}
                        <a href="{{ path('app_formation_index') }}" class="btn btn-custom btn-outline-primary w-100">
                            Retour à la liste
                        </a>
                    </div>
                </div>

                <!-- Nouvelle section Description -->
                <div class="formation-details mt-4">
                    <h3 class="section-title">Description</h3>
                    <div class="description-content">
                        <p class="text-muted">{{ formation.description|nl2br }}</p>
                    </div>
                </div>
            </div>

            <!-- Colonne de droite : Modèle 3D et Carte -->
            <div class="col-lg-8">
                {% if formation.model3dUrl %}
                    <div class="interactive-section">
                        <h3 class="section-title">Aperçu 3D</h3>
                        <div class="model-viewer-container">
                            <model-viewer
                                src="{{ asset(formation.model3dUrl) }}"
                                alt="Modèle 3D de {{ formation.titre }}"
                                auto-rotate
                                camera-controls
                                environment-image="neutral"
                                shadow-intensity="1"
                                exposure="1"
                                ar
                                ar-modes="webxr scene-viewer quick-look">
                                <button slot="ar-button" class="ar-button">
                                    <i class="fas fa-cube me-2"></i>Voir en AR
                                </button>
                            </model-viewer>
                        </div>
                    </div>
                {% endif %}

                <div class="interactive-section">
                    <h3 class="section-title">Localisation</h3>
                    <div id="map"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
     integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
     crossorigin=""></script>
    
    <script>
        window.onload = function() {
            var map = L.map('map').setView([{{ location.lat ?? 36.8065 }}, {{ location.lon ?? 10.1815 }}], 13);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '© OpenStreetMap contributors'
            }).addTo(map);

            {% if location %}
                var marker = L.marker([{{ location.lat }}, {{ location.lon }}]).addTo(map);
                marker.bindPopup("<b>{{ formation.titre }}</b><br>{{ formation.emplacement }}").openPopup();
            {% endif %}
        };
    </script>
{% endblock %}
