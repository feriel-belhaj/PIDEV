{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.titre) }}
                {{ form_widget(form.titre) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.titre) }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.categorie) }}
                {{ form_widget(form.categorie) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.categorie) }}
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}
        <div class="invalid-feedback">
            {{ form_errors(form.description) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.image) }}
                {{ form_widget(form.image, {'attr': {'class': 'form-control', 'accept': 'image/*'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.image) }}
                </div>
                <small class="form-text text-muted">
                    Formats acceptés : JPG, PNG, GIF. Taille maximale : 5MB
                </small>
                {% if form.vars.value.image is defined and form.vars.value.image %}
                    <div class="mt-2">
                        <img src="{{ asset('uploads/images/' ~ form.vars.value.image) }}" 
                             alt="Image actuelle" 
                             class="img-thumbnail" 
                             style="max-width: 150px">
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.statut) }}
                {{ form_widget(form.statut) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.statut) }}
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        <a href="{{ path('app_creation_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
{{ form_end(form) }}
