{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="mb-3">
        {{ form_label(form.amount, 'Montant du don', {'label_attr': {'class': 'form-label'}}) }}
        <div class="input-group has-validation">
            {{ form_widget(form.amount, {
                'attr': {
                    'class': 'form-control' ~ (form.amount.vars.valid ? '' : ' is-invalid'),
                    'placeholder': 'Entrez le montant de votre don'
                }
            }) }}
            <span class="input-group-text">€</span>
            {{ form_errors(form.amount, {'attr': {'class': 'invalid-feedback'}}) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.message, 'Message (optionnel)', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.message, {
            'attr': {
                'class': 'form-control' ~ (form.message.vars.valid ? '' : ' is-invalid'),
                'placeholder': 'Laissez un message de soutien...',
                'rows': 3
            }
        }) }}
        {{ form_errors(form.message, {'attr': {'class': 'invalid-feedback'}}) }}
        <div class="form-text">Vous pouvez laisser un message de soutien au créateur du projet (500 caractères max)</div>
    </div>

    {{ form_widget(form.paymentref) }}

    <div class="d-grid gap-2">
        <button class="btn btn-primary btn-lg">{{ button_label|default('Faire un don') }}</button>
    </div>
{{ form_end(form) }}
