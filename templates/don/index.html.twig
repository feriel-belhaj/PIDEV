{% extends 'baseBack.html.twig' %}

{% block title %}Liste des Dons{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Liste des Dons</h6>
            <div class="d-flex">
                <span class="mr-3">Total des dons : {{ dons|reduce((sum, don) => sum + don.amount, 0)|number_format(2, ',', ' ') }} €</span>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Date du don</th>
                            <th>Montant</th>
                            <th>Projet</th>
                            <th>Message</th>
                            <th>Référence</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for don in dons %}
                        <tr>
                            <td>{{ don.id }}</td>
                            <td>{{ don.donationdate ? don.donationdate|date('d/m/Y H:i') : '' }}</td>
                            <td class="text-right">{{ don.amount|number_format(2, ',', ' ') }} €</td>
                            <td>
                                <a href="{{ path('app_evenement_show', {'id': don.evenement.id}) }}">
                                    {{ don.evenement.titre }}
                                </a>
                            </td>
                            <td>{{ don.message|slice(0, 50) }}{{ don.message|length > 50 ? '...' : '' }}</td>
                            <td><code>{{ don.paymentref }}</code></td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('app_don_show', {'id': don.id}) }}" class="btn btn-info btn-sm" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    {# Boutons modifier et supprimer désactivés
                                    <a href="{{ path('app_don_edit', {'id': don.id}) }}" class="btn btn-warning btn-sm" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_don_delete', {'id': don.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce don ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ don.id) }}">
                                        <button class="btn btn-danger btn-sm" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                    #}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Aucun don trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table td, .table th {
            vertical-align: middle;
        }
        .btn-group .btn {
            margin: 0 2px;
        }
    </style>
{% endblock %}
