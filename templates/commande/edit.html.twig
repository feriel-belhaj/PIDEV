{% extends 'base.html.twig' %}

{% block title %}
    Modifier la commande
{% endblock %}

{% block body %}
    <div class="container mt-5 text-center">
        <div class="p-5 bg-light rounded contact-form position-relative">
            <!-- Croix pour annuler -->
            <a href="{{ path('app_commande_index') }}" class="position-absolute top-0 end-0 m-3 text-danger" style="font-size: 24px; text-decoration: none;">Ã—</a>
            <h3 class="display-5 mb-0">Modifier la commande #{{ commande.id }}</h3>

            {{ form_start(form, {'attr': {'id': 'commandeForm', 'novalidate': 'novalidate'}}) }}

            {% for produit in produits %}
                <div class="mb-3 text-start">
                    <label class="fw-bold">{{ produit.nom }}</label>
                    {{ form_widget(form.quantites[loop.index0]) }}

                    {% if form.quantites[loop.index0].vars.errors|length > 0 %}
                        <div class="text-danger">
                            {% for error in form.quantites[loop.index0].vars.errors %}
                                <p>{{ error.message }}</p>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}

            <button type="submit" class="btn btn-primary border-0 rounded-pill py-3 px-5 me-3 animated bounceInLeft" style="font-family: 'Open Sans', sans-serif;">
                Modifier
            </button>

            {{ form_end(form) }}
        </div>
    </div>

    <style>
        .text-start label {
            font-weight: bold;
        }
    </style>
{% endblock %}
