{% extends 'base.html.twig' %}

{% block title %}Partenariat index{% endblock %}

{% block body %}
    <h1>Partenariat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>Statut</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partenariat in partenariats %}
            <tr>
                <td>{{ partenariat.id }}</td>
                <td>{{ partenariat.dateDebut ? partenariat.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ partenariat.dateFin ? partenariat.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ partenariat.statut }}</td>
                <td>{{ partenariat.description }}</td>
                <td>
                    <a href="{{ path('app_partenariat_show', {'id': partenariat.id}) }}">show</a>
                    <a href="{{ path('app_partenariat_edit', {'id': partenariat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_partenariat_new') }}">Create new</a>
{% endblock %}
